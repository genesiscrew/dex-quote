# -------- Core blockchain config --------
RPC_URL=
CHAIN_ID=1

# -------- Server --------
PORT=3000

# -------- Gas snapshot behavior --------
# Default priority fee used if provider doesn't return one (gwei)
DEFAULT_PRIORITY_GWEI=1.5
# Max wait for initial gas snapshot before listening (ms)
GAS_READY_TIMEOUT_MS=10000

# -------- Metrics --------
# Set to 1/true to log per-request metrics to console
METRICS_DEBUG=0

# -------- Rate limiting (defaults) --------
# Tokens per window and window length (seconds)
RL_DEFAULT_POINTS=60
RL_DEFAULT_DURATION=60
# Optional ban time (seconds) after exceeding limit
RL_DEFAULT_BLOCK=0

# -------- Rate limiting (route overrides) --------
# /gasPrice
RL_GAS_POINTS=60
RL_GAS_DURATION=60
# /return/:fromTokenAddress/:toTokenAddress/:amountIn
RL_RETURN_POINTS=12
RL_RETURN_DURATION=60

# -------- Distributed rate limiting backend (optional) --------
# If set, enables Redis-backed shared buckets across instances
REDIS_URL=
